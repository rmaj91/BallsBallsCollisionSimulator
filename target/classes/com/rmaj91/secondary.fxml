<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" minHeight="400.0" minWidth="600.0" onKeyPressed="#setBallRadius" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rmaj91.SecondaryController">
   <center>
      <StackPane fx:id="background" alignment="TOP_CENTER" minHeight="300.0" minWidth="600.0" style="-fx-background-color: #99ceff;" BorderPane.alignment="TOP_CENTER">
         <children>
            <Canvas fx:id="simulator" height="500.0" onMousePressed="#createBall" onMouseReleased="#clearBallRef" width="1280.0" StackPane.alignment="CENTER" />
            <VBox fx:id="infoBox" maxHeight="150.0" maxWidth="240.0" minHeight="150.0" minWidth="240.0" opacity="0.68" style="-fx-background-color: #aaaaaa;" StackPane.alignment="TOP_LEFT">
               <children>
                  <HBox fx:id="coordinates">
                     <children>
                        <Label text=" Coordinates (x,y):  ">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Label fx:id="coordinatesLbl" text="22, 11">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox fx:id="radius">
                     <children>
                        <Label text=" Radius: ">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Label fx:id="radiusLbl" text="22px">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <HBox fx:id="accVector">
                     <children>
                        <Label text=" Earth acc: ">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Spinner fx:id="earthAcceleration" maxWidth="65.0" />
                     </children>
                  </HBox>
                  <HBox fx:id="speedVector">
                     <children>
                        <Label text=" Speed vector (x,y): ">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <TextField maxWidth="50.0" promptText="0" />
                        <TextField maxWidth="50.0" promptText="0" />
                     </children>
                  </HBox>
                  <HBox fx:id="color">
                     <children>
                        <Label text=" Color: ">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <ColorPicker fx:id="colorPicker" maxWidth="100.0" />
                     </children>
                  </HBox>
                  <HBox fx:id="info">
                     <children>
                        <Label text=" Number of obj's: ">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Label text="1">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
   <bottom>
      <StackPane maxHeight="100.0" minHeight="100.0" minWidth="600.0" style="-fx-background-color: #042606;" BorderPane.alignment="TOP_CENTER">
         <children>
            <Button fx:id="simulationBtn" focusTraversable="false" mnemonicParsing="false" onAction="#simulationBtnClicked" text="Start Simulation" StackPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
            </Button>
            <Button fx:id="clearBtn" focusTraversable="false" mnemonicParsing="false" onAction="#clearBtnClicked" text="Reset Balls" StackPane.alignment="CENTER_RIGHT">
               <font>
                  <Font size="18.0" />
               </font>
               <StackPane.margin>
                  <Insets right="50.0" />
               </StackPane.margin>
            </Button>
         </children></StackPane>
   </bottom>
</BorderPane>
